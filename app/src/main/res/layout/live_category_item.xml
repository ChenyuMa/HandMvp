<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/categoty_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/live_default"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv"
            android:padding="4dp">
            <ImageView
                android:id="@+id/categoty_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dp"
                android:src="@mipmap/default_recommend_icon"/>

            <TextView
                android:id="@+id/categoty_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#49525E"
                android:layout_toRightOf="@+id/categoty_icon"
                android:singleLine="true"
                android:layout_margin="8dp"
                android:textSize="@dimen/list_live_name_size"/>



        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>